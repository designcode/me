---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'designcode.me', description = 'Thoughts and Ramblings' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style is:global>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
      }

      /* Typography styles for markdown content */
      article h1, article h2, article h3, article h4, article h5, article h6 {
        font-weight: 600;
        color: var(--color-primary);
        line-height: 1.3;
      }

      article h1 {
        font-size: var(--font-size-3xl);
        margin-bottom: var(--spacing-lg);
      }

      article h2 {
        font-size: var(--font-size-2xl);
        margin-bottom: var(--spacing-md);
      }

      article h3 {
        font-size: var(--font-size-xl);
        margin-top: var(--spacing-xl);
        margin-bottom: var(--spacing-sm);
      }

      article p {
        color: var(--color-foreground);
        line-height: 1.8;
        margin-bottom: var(--spacing-lg);
      }

      article a {
        color: var(--color-primary);
        text-decoration: underline;
        text-decoration-color: var(--color-tertiary);
        text-underline-offset: 2px;
        transition: text-decoration-color 0.2s;
      }

      article a:hover {
        text-decoration-color: var(--color-primary);
      }

      article code {
        color: var(--color-primary);
        background-color: var(--color-bg);
        padding: 0.125rem 0.375rem;
        border-radius: var(--radius-md);
        font-size: 0.9em;
        font-family: 'Courier New', Courier, monospace;
      }

      article pre {
        background-color: var(--color-bg);
        border: 1px solid var(--color-tertiary);
        border-radius: var(--radius-lg);
        padding: var(--spacing-md);
        overflow-x: auto;
        margin-bottom: var(--spacing-lg);
      }

      article pre code {
        background-color: transparent;
        padding: 0;
        border-radius: 0;
      }

      article blockquote {
        border-left: 4px solid var(--color-tertiary);
        padding-left: var(--spacing-md);
        color: var(--color-secondary);
        font-style: italic;
        margin-bottom: var(--spacing-lg);
      }

      article ul, article ol {
        margin-bottom: var(--spacing-lg);
        padding-left: var(--spacing-lg);
      }

      article li {
        color: var(--color-foreground);
        margin-bottom: var(--spacing-xs);
      }

      article img {
        border-radius: var(--radius-sm);
        margin-top: var(--spacing-xl);
        margin-bottom: var(--spacing-xl);
        max-width: 100%;
        height: auto;
      }

      article hr {
        border-color: var(--color-tertiary);
        margin-top: var(--spacing-2xl);
        margin-bottom: var(--spacing-2xl);
      }
    </style>
  </head>
  <body class="bg-white text-primary leading-relaxed max-w-[680px] mx-auto px-6 py-12">
    <header>
      <nav class="border-b border-tertiary pb-6 mb-10">
        <a href="/" class="text-xl font-semibold no-underline hover:opacity-70 transition-opacity">{title}</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="mt-8 pt-8 border-t border-tertiary text-secondary text-sm">
      <p>Built with <a href="https://astro.build" class="text-secondary hover:text-primary">Astro</a>.</p>
    </footer>
  </body>
</html>
