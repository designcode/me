---
interface Props {
  title?: string;
  description?: string;
}

const { title = 'designcode.me', description = 'Thoughts and Ramblings' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      :root {
        --color-primary: #1f1f1d;
        --color-secondary: #787670;
        --color-foreground: #555451;
        --color-background: #ffffff;
        --color-tertiary: #d9d9d6;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        line-height: 1.7;
        color: var(--color-primary);
        background-color: var(--color-background);
        max-width: 680px;
        margin: 0 auto;
        padding: 3rem 1.5rem;
      }

      a {
        color: var(--color-primary);
        text-decoration: underline;
        text-decoration-color: var(--color-tertiary);
        text-underline-offset: 3px;
        transition: text-decoration-color 0.2s;
      }

      a:hover {
        text-decoration-color: var(--color-primary);
      }

      h1, h2, h3, h4, h5, h6 {
        font-weight: 600;
        line-height: 1.3;
        margin-bottom: 1rem;
      }

      h1 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
      }

      h2 {
        font-size: 1.5rem;
        margin-top: 2rem;
      }

      p {
        margin-bottom: 1.5rem;
      }

      article img {
        max-width: 100%;
        height: auto;
        border-radius: 2px;
      }

      pre {
        background: #fafafa;
        padding: 1rem;
        border-radius: 4px;
        overflow-x: auto;
        margin-bottom: 1.5rem;
      }

      code {
        font-family: 'Courier New', monospace;
        font-size: 0.9em;
      }

      blockquote {
        border-left: 3px solid var(--color-tertiary);
        padding-left: 1rem;
        margin-left: 0;
        margin-bottom: 1.5rem;
        color: var(--color-secondary);
      }
    </style>
  </head>
  <body>
    <header>
      <nav style="margin-bottom: 3rem;">
        <a href="/" style="font-size: 1.25rem; font-weight: 600; text-decoration: none;">{title}</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer style="margin-top: 4rem; padding-top: 2rem; border-top: 1px solid var(--color-tertiary); color: var(--color-secondary); font-size: 0.9rem;">
      <p>Built with <a href="https://astro.build">Astro</a>.</p>
    </footer>
  </body>
</html>
