---
interface Props {
  trailId: string;
  title: string;
}

const { trailId, title } = Astro.props;
---

<div class="embed-container alltrails-embed">
  <iframe
    src={`https://www.alltrails.com/widget/recording/${trailId}?elevationDiagram=false`}
    title={title}
    width="100%"
    height="400"
    frameborder="0"
    scrolling="no"
    marginheight="0"
    marginwidth="0"></iframe>
</div>
